log_file = /var/log/audit/audit.log
log_format = RAW
log_group = root
priority_boost = <%= @config['priority_boost'] %>
flush = INCREMENTAL
freq = 20
num_logs = <%= @config['number_of_logs'] %>
disp_qos = lossy
dispatcher = /sbin/audispd
name_format = NONE
## name = mydomain
max_log_file = <%= @config['max_log_file'] %>
max_log_file_action = <%= @config['max_log_file_action'] %>
space_left = 125
space_left_action = email
action_mail_acct = root
admin_space_left = 75
admin_space_left_action = SUSPEND
disk_full_action = SUSPEND
disk_error_action = SUSPEND
## tcp_listen_port =
tcp_listen_queue = 5
tcp_max_per_addr = 1
## tcp_client_ports = 1024-65535
tcp_client_max_idle = 0
enable_krb5 = no
krb5_principal = auditd
